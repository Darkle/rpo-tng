/* eslint-disable */
{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "removeComments": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-unknown-event": "error"
        }
      },
      {
        "transform": "@magic-works/ttypescript-browser-like-import-transformer",
        "after": true,
        "bareModuleRewrite": "snowpack",
        "webModulePath": "../web_modules/",
      },
    ],
  },
  "include": [
    "src/ts/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}