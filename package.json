{
  "name": "rpo-tng",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "snowpack --dest src/web_modules && ts-typie",
    "dev": "NODE_ENV=development concurrently \"npm:dev:*\"",
    "dev:browsersync": "cd src && browser-sync --server --port 8888 --watch --no-open --no-ghost-mode --no-notify --no-ui --https",
    "dev:babel": "babel -x .ts,.tsx src/ts --out-dir src/ts --ignore \"src/web_modules/**/*.*\" --source-maps --watch",
    "dev:typescript": "tsc --watch",
    "build": "CACHE_BUST_STRING=$(random string) NODE_ENV=production run-s build:**",
    "build:eslint": "eslint \"src/ts/**/*.ts\" --quiet",
    "build:lit-analyzer": "lit-analyzer \"src/ts/**/*.ts\" --strict --rules.no-unknown-event error",
    "build:check-typescript": "tsc",
    "build:clean": "trash dist && mkdir dist",
    "build:copy-assets": "ncp src/css dist/css && ncp src/assets dist/assets",
    "build:snowpack": "snowpack --optimize --no-source-map --stat --dest dist/web_modules",
    "build:babel": "babel -x .ts,.tsx src/ts --out-dir dist/js --ignore \"src/web_modules/**/*.*\"",
    "build:rename-js-files": "laren \"./dist/js/**/*.js\" \"f => f.replace('.js', '_' + process.env.CACHE_BUST_STRING + '.js')\"",
    "build:html-script-src-replace": "html-script-src-replace --html-input-file src/index.html --html-output-file dist/index.html --filename-postfix _",
    "build:minify-css": "foreach --glob \"dist/**/*.css\" --execute \"csso --input #{path} --output #{path}\"",
    "build:vendor-size-check": "chalk blue bold 'Vendor Libs Size Check:\n\n' && bundlesize -f \"dist/ts/web_modules/**/*.ts\" -s 35kB",
    "build:total-size-check": "ncat 'dist/**/*.js' -o ./total-bundle.js > /dev/null && chalk blue bold 'Total JS Size Check:\n\n' && bundlesize -f ./total-bundle.js -s 70kB && trash ./total-bundle.js",
    "lighthouse": "npm run build && npm-s lighthouse:**",
    "lighthouse:serve": "cd dist && browser-sync --server --port 8888 --no-notify --no-ghost-mode --no-open --no-ui --https &",
    "lighthouse:lighthouse": "lighthouse https://localhost:8888 --chrome-flags='--ignore-certificate-errors' --view --only-categories=accessibility,best-practices,performance,seo --quiet --output-path ./lighthouse-report.html && trash ./lighthouse-report.html",
    "lighthouse:kill-serve": "fkill :8888"
  },
  "browserslist": "last 3 Chrome version, Firefox ESR, last 1 safari version, last 3 ios version",
  "snowpack": {
    "install": [
      "@airbrake/browser",
      "lit-html",
      "litestate",
      "navigo"
    ]
  },
  "dependencies": {
    "@airbrake/browser": "^1.4.0",
    "lit-html": "^1.2.1",
    "litestate": "^0.11.0",
    "navigo": "^7.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/browser-sync": "^2.26.1",
    "@types/concurrently": "^5.2.1",
    "@types/eslint": "^7.2.0",
    "@types/navigo": "^7.0.1",
    "@types/ncp": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "babel-plugin-inline-replace-variables": "^1.3.1",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "babel-preset-minify": "^0.5.1",
    "browser-sync": "^2.26.12",
    "bundlesize": "^0.18.0",
    "chalk-cli": "^4.1.0",
    "concurrently": "^5.3.0",
    "csso-cli": "^3.0.0",
    "eslint": "^7.6.0",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-lit": "^1.2.2",
    "fkill-cli": "^6.0.1",
    "foreach-cli": "^1.8.1",
    "html-script-src-replace": "^0.1.4",
    "laren": "^1.2.0",
    "lighthouse": "^6.2.0",
    "lit-analyzer": "^1.2.1",
    "ncat": "^4.0.2",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "random-generator-cli": "^2.4.2",
    "snowpack": "^2.7.7",
    "trash-cli": "^3.1.0",
    "ts-lit-plugin": "^1.2.1",
    "ts-typie": "^1.1.1",
    "typescript": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Darkle/rpo-tng.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Darkle/rpo-tng/issues"
  },
  "homepage": "https://github.com/Darkle/rpo-tng#readme"
}
