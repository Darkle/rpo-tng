{
  "name": "rpo-tng",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development cd src && browser-sync --server --port 8888 --watch --no-open --no-ghost-mode --no-notify --no-ui --https",
    "build": "CACHE_BUST_STRING=$(random string) NODE_ENV=production run-s build:**",
    "build:eslint": "eslint \"src/js/**/*.js\" --quiet",
    "build:lit-analyzer": "lit-analyzer \"src/js/**/*.js\" --strict --rules.no-unknown-event error",
    "build:clean": "trash dist && mkdir dist",
    "build:copy-assets": "cp -r src dist",
    "build:rename-js-files": "laren \"./dist/js/**/*.js\" \"f => f.replace('.js', '_' + process.env.CACHE_BUST_STRING + '.js')\"",
    "build:html-script-src-replace": "html-script-src-replace --html-input-file src/index.html --html-output-file dist/index.html --filename-postfix _",
    "build:minify": "minify -r ./dist --output ./dist"
  },
  "devDependencies": {
    "browser-sync": "^2.26.12",
    "eslint": "^7.6.0",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-lit": "^1.2.2",
    "html-script-src-replace": "^0.1.4",
    "laren": "^1.2.0",
    "lit-analyzer": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "random-generator-cli": "^2.4.2",
    "trash-cli": "^3.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Darkle/rpo-tng.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Darkle/rpo-tng/issues"
  },
  "homepage": "https://github.com/Darkle/rpo-tng#readme"
}
